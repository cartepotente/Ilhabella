<div class="mio">
<div class="container">

<div class="col-lg-12">

<%= simple_form_for(@search) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :keyword, error: 'Nombre no puede ser en Blanco' %>
    
	
	<br>
  <%= f.grouped_collection_select :subcategory, Category.order(:name),:types,:name, :id, :name, {prompt:"Escoje una Sub-Categoria"}, {class:"form-control"} %>

<br>


	<%= f.collection_select :marca, Marca.all,:id,:name,{prompt:"Escoje una Marca"},{class:"form-control"}  %>
  
  </div>
  

<br>
  <div class="form-actions">
    <%= f.button :submit, 'Buscar', class:'btn btn-primary'%>
  </div>
<% end %>
</div>
</div>
<br>
</div>