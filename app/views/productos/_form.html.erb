
<div class="container">

<div class="col-lg-12">

<%= simple_form_for(@producto) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :image, as: :file %>
    <%= f.input :nombre, error: 'Nombre no puede ser en Blanco' %>
    <%= f.input :descripcion %>
    <%= f.input :precio %>
	<%= f.collection_select :category_id, Category.all,:id,:name,{prompt:"Escoje una Categoria"},{class:"form-control"}  %>
	<br>
  <%= f.grouped_collection_select :type_id, Category.order(:name),:types,:name, :id, :name, {prompt:"Escoje una Sub-Categoria"}, {class:"form-control"} %>

<br>


	<%= f.collection_select :marca_id, Marca.all,:id,:name,{prompt:"Escoje una Marca"},{class:"form-control"}  %>
  
  </div>
  

<br>
  <div class="form-actions">
    <%= f.button :submit, 'Guardar', class:'btn btn-primary'%>
  </div>
<% end %>
</div>
</div>
<br>
